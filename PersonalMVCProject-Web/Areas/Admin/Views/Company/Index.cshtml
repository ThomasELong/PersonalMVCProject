
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Home</a>
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br />

<table id="tblData" class="table table-bordered table-striped bg-light" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th></th>
        </tr>
    </thead>
</table>
</div>

@*this section outlines remainder of Product View, populates available product form data*@
@section Scripts{
    <script src="~/js/company.js"></script>
}