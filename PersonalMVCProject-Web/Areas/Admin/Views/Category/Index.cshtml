
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Home</a>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus"></i> &nbsp; New Category
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped bg-light" style="width:100%">
    <thead>
        <tr>
            <th>
                Index Number
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th class="text-center">
                Options
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width=15%>
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                        <div class="dropdown text-center">
                              <a class="" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="bi bi-caret-down"></i></a>
                              <div class="dropdown-menu">
                                <a  class="dropdown-item" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i>Edit</a>
                                <a  class="dropdown-item" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-x"></i>Delete</a>
                              </div>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>